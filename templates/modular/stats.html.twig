
    <!-- s-stats
    ================================================== -->
    <section id="stats" class="s-stats">
        <div class="row block-1-4 block-tab-1-2 block-mob-full stats">
        
        {% for item in page.header.stats %}
            <div class="col-block stats__col {% if item.statHighlight == '1'%}stats__col--highlight{% endif %}">
            {% if item.statIconClass %}
            <div class="stats__upsign">
                    <a href="#"><i class="{{item.statIconClass}}" aria-hidden="true"></i></a>
                </div>
            {% endif %}
                <div class="stats__count">
                    {{ item.statCount }}
                </div>
                <h4>{{ item.statDescription }}</h4>
            </div>
        {% endfor %}

        </div>
    </section> <!-- end s-stats -->


    